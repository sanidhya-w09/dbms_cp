<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Pharmacy Drug Management</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <!-- Custom Stylesheet -->
  <link rel="stylesheet" href="/css/styles.css">
  
  <style>
    /* Custom Navbar Styles */
    .navbar {
      background-color: #0d6efd; /* Primary color */
      padding: 1rem 1.5rem;
      border-radius: 0.5rem;
    }

    .navbar-brand {
      font-weight: bold;
      font-size: 1.5rem;
    }

    .navbar-nav .nav-link {
      color: #ffffff !important;
      padding: 0.75rem 1.2rem;
      font-size: 1rem;
      transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .navbar-nav .nav-link:hover {
      background-color: #0b5ed7;
      transform: scale(1.05);
    }

    .navbar-toggler {
      border: none;
    }

    /* Active state for navigation items */
    .navbar-nav .nav-item.active .nav-link {
      background-color: #004085;
      color: white !important;
    }

    /* Mobile Navigation */
    @media (max-width: 768px) {
      .navbar-nav {
        text-align: center;
      }
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="/">Pharmacy Drug Management</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <% if (typeof user !== 'undefined') { %>
            <% if (typeof userType !== 'undefined' && userType === 'customer') { %>
              <li class="nav-item">
                <a class="nav-link" href="/homepage">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/orders">My Orders</a>
              </li>
            <% } else if (typeof userType !== 'undefined' && userType === 'seller') { %>
              <li class="nav-item">
                <a class="nav-link" href="/seller/homepage">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/seller/add-product">Add Product</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/seller/orders">Orders</a>
              </li>
            <% } %>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <!-- Page content will go here -->
  </div>

  <!-- Bootstrap JS, Popper.js, and jQuery -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
