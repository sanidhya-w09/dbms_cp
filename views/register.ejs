<%- include('partials/header') %>

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow">
      <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Customer Registration</h4>
      </div>
      <div class="card-body">
        <% if (error) { %>
          <div class="alert alert-danger" role="alert">
            <%= error %>
          </div>
        <% } %>
        
        <form action="/register/customer" method="POST">
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="uid">Customer ID</label>
              <input type="text" class="form-control" id="uid" name="uid" maxlength="15" required>
              <small class="form-text text-muted">Choose a unique ID for login (maximum 15 characters)</small>
            </div>
            <div class="form-group col-md-6">
              <label for="password">Password</label>
              <input type="password" class="form-control" id="password" name="password" required>
              <small class="form-text text-muted">Your password should be at least 8 characters long</small>
            </div>
          </div>
          
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="fname">First Name</label>
              <input type="text" class="form-control" id="fname" name="fname" required>
            </div>
            <div class="form-group col-md-6">
              <label for="lname">Last Name</label>
              <input type="text" class="form-control" id="lname" name="lname" required>
            </div>
          </div>
          
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" required>
          </div>
          
          <div class="form-group">
            <label for="address">Address</label>
            <textarea class="form-control" id="address" name="address" rows="3" required></textarea>
          </div>
          
          <div class="form-group">
            <label for="phno">Phone Number</label>
            <input type="tel" class="form-control" id="phno" name="phno" pattern="[0-9]{10}" required placeholder="123-456-7890">
            <small class="form-text text-muted">Enter a 10-digit phone number</small>
          </div>
          
          <div class="form-group text-center">
            <button type="submit" class="btn btn-primary btn-lg">Register</button>
          </div>
        </form>
        
        <div class="text-center mt-3">
          <p>Already have an account? <a href="/login">Login here</a></p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
