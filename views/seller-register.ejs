<%- include('partials/header') %>

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow">
      <div class="card-header bg-primary text-white">  <!-- Changed bg-secondary to bg-primary for blue -->
        <h4 class="mb-0">Seller Registration</h4>
      </div>
      <div class="card-body">
        <% if (error) { %>
          <div class="alert alert-danger" role="alert">
            <%= error %>
          </div>
        <% } %>
        
        <form action="/register/seller" method="POST">
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="sid">Seller ID</label>
              <input type="text" class="form-control" id="sid" name="sid" required>
              <small class="form-text text-muted">Choose a unique ID for login</small>
            </div>
            <div class="form-group col-md-6">
              <label for="password">Password</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
          </div>
          
          <div class="form-group">
            <label for="sname">Store/Pharmacy Name</label>
            <input type="text" class="form-control" id="sname" name="sname" required>
          </div>
          
          <div class="form-group">
            <label for="address">Address</label>
            <textarea class="form-control" id="address" name="address" rows="3" required></textarea>
          </div>
          
          <div class="form-group">
            <label for="phno">Phone Number</label>
            <input type="tel" class="form-control" id="phno" name="phno" required pattern="[0-9]{10}" title="Phone number should be 10 digits">
            <small class="form-text text-muted">Enter a valid 10-digit phone number</small>
          </div>
          
          <div class="form-group text-center">
            <button type="submit" class="btn btn-primary btn-lg">Register as Seller</button> <!-- Changed btn-secondary to btn-primary -->
          </div>
        </form>
        
        <div class="text-center mt-3">
          <p>Already have a seller account? <a href="/login">Login here</a></p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
